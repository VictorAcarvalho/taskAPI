{
    "openapi":"3.0.0",
    "info":{
        "title":"API de tarefas",
        "description":"API de manipulação de tarefas, onde cada tarefa apresenta autor,nome, data de criação e descrição.",
        "contact":{
            "email": "carvalho.victorfa@gmail.com"
         },
         "version":"1.0.0"
    },
    "servers":[{ 

        "url":"http://localhost:port/",
        "description":"URL de ambiente de desenvolvimento"   
    } 
    ],
    "paths":{ 
        "/user":{
            "post":{
                "title":"Cadastro de usuário",
                "sumary": "Cadastro de usuário",
                "description": "Rota responsável pelo cadastro de usuário",
                "tags":["User"],
                "requestBody":{ 
                    "content":{
                        "application/json":{
                            "schema":{
                                "properties":{
                                    "name":{
                                        "type":"string"
                                    }
                                }
                            }
                        }
                    }
                },
                "examples":{
                    "user":{
                        "value":{
                            "name":"Usuario de teste"
                        }
                    }
                },
                "responses":{
                    "401":{
                        "description":"Unauthorized"
                    },
                    "500":{
                        "descritption":"Internal Server Error"
                    },
                    "201":{
                        "description":"Created",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "properties":{
                                        "id":{
                                            "type":"string"
                                        },
                                        "name":{
                                            "value":"Usuario de teste"
                                        },
                                        "tasks":{
                                            "type":"array"
                                        }
                                        
                                    }
                                }
                            }
                        }
                    }
                }
            },

            "get":{
                "sumary": "Listagem de todos os usuários",
                "description": "Rota responsável por listar todos os usuários",
                "tags":["User"]
            }
        },
        "/user/:user":{
            "get":{
                "sumary":"Lista apegas um usuário",
                "description":"Rota responsável por listar apenas um usuário passando o id dele como paramêtro",
                "tags":["User"]
        }
    }
}}